{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "command": "csc",
            "type": "shell",
            "args": [
                "-debug",
                "/win32icon:command.ico",
                "cyideexport.cs",
                "Program.cs",
                "/out:${workspaceFolderBasename}.exe"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Release",
            "command": "csc",
            "type": "shell",
            "args": [
                "-optimize",
                "/win32icon:command.ico",
                "cyideexport.cs",
                "Program.cs",
                "/out:${workspaceFolderBasename}.exe"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
