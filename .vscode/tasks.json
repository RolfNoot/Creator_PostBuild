        {
            "label": "exeToBinary MAC",
            "command": "mkbundle",
            "type": "shell",
            "args": [
                "--nodeps",
                //"--deps",
                "--i18n",
                "none",
                "--cross",
                "mono-4.8.0-osx-10.7-x64",      // for a specific target, check mkbundle --list-targets, to install: mkbundle --fetch-target mono-4.8.0-osx-10.7-x64
               // "-z",
               // "-L",
               // "/Library/Frameworks/Mono.framework/Versions/Current/lib/mono/4.5",
                "${workspaceFolderBasename}.exe",
                "-o",
                "${workspaceFolderBasename}_mac",
                "-v"
            ],
            "options": {  "env": { "PKG_CONFIG_PATH": "/Library/Frameworks/Mono.framework/Versions/current/lib/pkgconfig" } }
        },
        {
            "label": "exeToBinary Linux",
            "command": "mkbundle",
            "type": "shell",
            "args": [
                //"--static",
                "--nodeps",
                //"--deps",
                "--i18n",
                "none",
                "--cross",
                
              // "mono-5.8.0-ubuntu-16.04-x64",
              //  "mono-4.8.0-ubuntu-12.04-x64",
              //"mono-4.8.0-ubuntu-16.04-x64",
              "mono-4.8.0-debian-8-x64",
                
               // "-z",
               // "-L",
               // "/Library/Frameworks/Mono.framework/Versions/Current/lib/mono/4.5",
                "${workspaceFolderBasename}.exe",
                "-o",
                "${workspaceFolderBasename}_linux",
                "-v"
            ],
            "options": {  "env": { "PKG_CONFIG_PATH": "/Library/Frameworks/Mono.framework/Versions/current/lib/pkgconfig" } }
        }
    ]
